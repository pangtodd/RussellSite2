{% if collections.featuredPost.length %}
  {% set featuredPost = collections.featuredPost[0] %}
<section id="comingSoon">
  <div class="container mt-4 pt-4" style="text-align: center">
      <h2 class="text-center comingSoon-headline">Upcoming projects and appearances</h1>
      <h3>{{ featuredPost.data.title }}</h3>
      <h4> {{ featuredPost.data.description }}</h4>
      <img
        src="{{ featuredPost.data.image}}"
        class="comingSoonImg"
        alt="{{ featuredPost.data.imageAlt }}"
      />
        <br />
        <span class="comingSoon-text">
        {{ featuredPost.content|safe }}
        </span>
  </div>
</section>
{% endif %}

<section id="books">
  <div class="container mt-3">
    <h2 class="fs-1 text-center">Books</h2>
    <!-- Visible cards section -->
    {% set booksFirstDozen = collections.books.slice(0, 12) %}
    {% if booksFirstDozen.length > 0 %}
      {% for book in booksFirstDozen %}
        {% if loop.index0 % 4 ==0 %}
          <div class="row">
        {% endif %}
      <div class="col-lg-3 mt-3">
        <div class="card">
          <div class="image">
            <img
              class="card-img-top"
              src="{{ book.data.image }}"
              alt="cover of {{ book.data.title }}"
              style="width: 100%"
            />
          </div>
          <div class="details">
            <div class="center">
              <h3>{{ book.data.title }}</h3>
              <p>
                {{ book.content | safe }}
                {%if book.data.quote%}
                  <br />-{{book.data.quote}} 
                {% endif %}
                <br />Art by {{book.data.artist}}
              </p>
              <a
                href="{{book.data.link}}"
                class="btn btn-success"
                >buy now</a
              >
            </div>
          </div>
        </div>
      </div>
      {% if loop.index % 4 == 0 or loop.last%}
        </div>
      {% endif %}
    {% endfor %}
    {% endif %}
    
    <div class="text-center" style="margin-top: 10px">
      <br>
      <a href="/books" class="text-center btn btn-success" aria-label="link to books">more books</a>
    </div>
  </div>
</section>

